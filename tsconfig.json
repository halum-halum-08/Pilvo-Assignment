{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./status-backend",
    "outDir": "./status-backend/dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./", // Enable absolute imports
    "paths": {
      "@components/*": ["status-frontend/src/components/*"],
      "@pages/*": ["status-frontend/src/pages/*"],
      "@context/*": ["status-frontend/src/context/*"],
      "@services/*": ["status-frontend/src/services/*"],
      "@hooks/*": ["status-frontend/src/hooks/*"],
      "@styles/*": ["status-frontend/src/styles/*"],
      "@utils/*": ["status-frontend/src/utils/*"]
    }
  },
  "include": [
    "status-backend/**/*.ts",
    "status-frontend/src/**/*"
  ],
  "exclude": ["node_modules", "status-backend/dist"]
}
