{
  "name": "status-backend",
  "version": "1.0.0",
  "description": "Backend for status page application",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "test": "jest",
    "docker:build": "docker build -t status-backend .",
    "docker:run": "docker run -p 8080:8080 --env-file .env.production status-backend",
    "start:prod": "node dist/index.js",
    "deploy:prepare": "npm run build && npm run prisma:generate",
    "deploy:render": "echo 'Deploy to Render by connecting your GitHub repo at https://dashboard.render.com/select-repo?type=web'",
    "render-build": "npm install && npm run prisma:generate && npm run build",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:seed": "ts-node prisma/seed.ts",
    "db:setup": "npm run db:migrate && npm run db:seed"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.14.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.1",
    "follow-redirects": "^1.15.4",
    "helmet": "^7.0.0",
    "json5": "^2.2.3",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "semver": "^7.5.2",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.1.3",
    "@types/supertest": "^2.0.12",
    "glob": "^11.0.1",
    "jest": "^29.5.0",
    "prisma": "^4.14.0",
    "rimraf": "^6.0.1",
    "socket.io-client": "^4.7.0",
    "sqlite3": "^5.1.6",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  }
}
